{
  "name": "quicksilver",
  "description": "browser extension for better movement",
  "private": true,
  "version": "0.2.2",
  "type": "module",
  "scripts": {
    "dev": "wxt -b chromium",
    "dev:firefox": "wxt -b firefox --mv3",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox --mv3",
    "zip:chrome": "wxt zip -b chrome --mv3",
    "zip:firefox": "wxt zip -b firefox --mv3",
    "compile": "tsc --noEmit",
    "postinstall": "wxt prepare"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.0.14",
    "nanoid": "^5.1.5",
    "solid-js": "^1.9.4",
    "tailwindcss": "^4.0.14"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.269",
    "@wxt-dev/module-solid": "^1.1.2",
    "typescript": "^5.6.2",
    "wxt": "^0.19.11"
  },
  "packageManager": "yarn@4.6.0"
}
