{
  "name": "quicksilver",
  "description": "browser extension for better movement",
  "private": true,
  "version": "0.12.1",
  "type": "module",
  "scripts": {
    "dev": "wxt -b chromium",
    "dev:firefox": "wxt -b firefox --mv3",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox --mv3",
    "zip:chrome": "wxt zip -b chrome --mv3",
    "zip:firefox": "wxt zip -b firefox --mv3",
    "compile": "tsc --noEmit",
    "postinstall": "wxt prepare"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.2.0",
    "@webext-core/messaging": "^2.3.0",
    "nanoid": "^5.1.6",
    "solid-js": "^1.9.11",
    "tailwindcss": "^4.2.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.313",
    "@wxt-dev/module-solid": "^1.1.4",
    "typescript": "^5.9.3",
    "wxt": "^0.20.17"
  },
  "packageManager": "yarn@4.6.0"
}
